#!/bin/sh

# Source environment variables from ~/.env
if [[ "$(uname)" != "Darwin" && -f "$HOME/.env" ]]; then
    source "$HOME/.env"
fi

# Source my zshrc from config
if ! grep -Fxq 'source "$HOME/.myzshrc"' ~/.zshrc; then
    echo 'source "$HOME/.myzshrc"' >> ~/.zshrc
fi



