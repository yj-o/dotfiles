#!/bin/sh
#
# Attach or create tmux session named the same as current directory.
# If not in ~ and no session name is provided, offer to pick from existing sessions via fzf.

path_name="$(basename "$PWD" | tr . -)"
session_name=${1:-}

not_in_tmux() {
  [ -z "$TMUX" ]
}

session_exists() {
  tmux has-session -t "=$1" 2>/dev/null
}

create_detached_session() {
  (TMUX='' tmux new-session -Ad -s "$1")
}

create_if_needed_and_attach() {
  # If no session name given and not in ~, offer fzf selection
  if [ -z "$session_name" ] && [ "$PWD" != "$HOME" ]; then
    session_name=$(tmux list-sessions -F "#{session_name}" 2>/dev/null | fzf-tmux --prompt="Select tmux session: ")
  fi

  # If still no session selected, fallback to current directory name
  session_name=${session_name:-$path_name}

  if not_in_tmux; then
    tmux new-session -As "$session_name"
  else
    if ! session_exists "$session_name"; then
      create_detached_session "$session_name"
    fi
    tmux switch-client -t "$session_name"
  fi
}

create_if_needed_and_attach
