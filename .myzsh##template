# Source environment variables from ~/.env
{% if yadm.os != "Darwin" %}
source "$HOME/.config/.env"
{% endif %}

# set common environment variables
export VISUAL=vim
export EDITOR=vim
export XDGC=$HOME/.config
export XDGB=$HOME/.local/share/bin
export PATH="$HOME/.local/bin:$PATH"
export OS=$(uname -s)

# Path to your Oh My Zsh installation.
export ZSH="$HOME/.oh-my-zsh"

# Set to not use theme from Oh My Zsh
ZSH_THEME=""

# Uncomment the following line if you want to disable marking untracked files
# under VCS as dirty. This makes repository status check for large repositories
# much, much faster.
DISABLE_UNTRACKED_FILES_DIRTY="true"


# Would you like to use another custom folder than $ZSH/custom?
ZSH_CUSTOM="$HOME/.config/zsh"

ZSH_TMUX_ITERM2="false"
ZSH_TMUX_CONFIG="~/.config/tmux/tmux.conf"

# Which plugins would you like to load?
plugins=(common-aliases docker git eza history sudo fzf zoxide fast-syntax-highlighting zsh-autosuggestions) #zsh-autocomplete)


source $ZSH/oh-my-zsh.sh


# User configuration

# You may need to manually set your language environment
export LANG=en_US.UTF-8

#Star Ship
eval "$(starship init zsh)"

# configure fzf
# Open in tmux popup if on tmux, otherwise use --height mode
export FZF_DEFAULT_OPTS='--height 40% --tmux bottom,40% --layout reverse --border top'